primary_region = "sjc"

[http_service]
  internal_port = 8080
  force_https = true
  auto_start_machines = true
  auto_stop_machines = "pause"
  min_machines_running = 1

  [http_service.concurrency]
    type = "connections"
    hard_limit = 50
    soft_limit = 40

[checks]
  [checks.health]
    type     = "http"
    port     = 8080
    method   = "GET"
    path     = "/health"
    interval = "5s"
    timeout  = "5s"
